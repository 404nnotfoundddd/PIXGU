// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Users {
  id           Int     @id @default(autoincrement())
  isAdmin      Boolean @default(false)
  nickname     String  @unique
  preferences  Json
  statistics   Json
  achievements Json
}
