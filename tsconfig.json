{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": "./",
    "paths": {
      "@/middlewares": ["src/middlewares/index.ts"],
      "@/xata": ["src/xata/"],
      "@/procedure": ["src/server/api/procedure"],
      "@/schema/*": ["src/server/db/sqlDb/schema/*"],
      "@/env/*": ["src/env/*"],
      "@/db/*": ["src/server/db/*"],
      "@/sqlDb": ["src/server/db/sqlDb"],
      "@/sqlDb/*": ["src/server/db/sqlDb/*"],
      "@/redis/*": ["src/server/db/redis/*"],
      "@/context/*": ["src/context/*"],
      "@/redis": ["src/server/db/redis/"],
      "@/auth/*": ["./src/auth/*"],
      "@/api/*": ["./src/app/api/*"],
      "@/trpc/*": ["./src/trpc/*"],
      "@/components/*": ["./src/components/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/hooks": ["./src/hooks/_index.ts"],
      "@/pusher/*": ["./src/pusher/*"],
      "@/server/*": ["./src/server/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/utils": ["./src/utils/_index.ts"],
      "@/styles/*": ["./src/styles/*"],
      "@/atoms": ["./src/atoms"],
      "@/zustand/*": ["./src/zustand/*"],
      "@/types/*": ["./src/types/*"],
      "@/types": ["./src/types/_index.ts"],
      "@/app/*": ["./src/app/*"],
      "@/public/*": ["./public/*"],
      "@/svg/*": ["public/image/svg/*"],
      "@/png/*": ["public/image/png/*"],
      "@/jpg/*": ["public/image/jpg/*"],
      "@/gif/*": ["public/image/gif/*"],
      "@/sound/*": ["public/sound/*"],
      "@/fonts/*": ["public/fonts/*"],
      "@/lib/*": ["./src/lib*"],
      "@/actions/*": ["./src/actions/*"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "**/*.js"]
}
